#include <iostream>
using namespace std;
float sum, sale, result, liter, x; // сумма, продажа со скидкой, литров
int main() {
  liter = x; // Цена бензина
  cout << "Введите сумму: ";
  cin >> sum; // ВВОДИМ СУММУ
  cout << "Введите цену бензина: ";
  cin >> x; // САМИ ПИШЕМ ЦЕНУ БЕНЗИНА
  if (sum < 500){
    result = sum / x; // Количество литров с суммы
    cout << "Литров: " << result  << endl << "Цена за литр: " << x << endl << "Цена с учетом скидки: " << sale << endl << "Итог: " << sum << endl ;
  }
  else if (sum >= 500 && sum < 1000){
    sale = x - 0.5; // Цена с учетом скидки 0.5р
    result = sum / sale; // Количество литров по скидке 0.5р
    cout << "Литров: " << result  << endl << "Цена за литр: " << x << endl << "Цена с учетом скидки: " << sale << endl << "Итог: " << sum << endl ;
  }
  else if (sum >= 1000){
    sale = x - 1; // Цена с учетом скидки 1р
    result = sum / sale; // Количество литров по скидке 1р
    cout << "Литров: " << result  << endl << "Цена за литр: " << x << endl << "Цена с учетом скидки: " << sale << endl << "Итог: " << sum << endl ;
  }
} //КАКОГО ЧЕРТА САМИМ ЦЕНУ ВВОДИТЬ АААА??
